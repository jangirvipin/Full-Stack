model Book{
  id Int @id @default(autoincrement())
  name String
  price Int
  title String
  category String
  image String
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model User{
  id Int @id @default(autoincrement())
  name String @unique
  email String
  password String
  Books Book[]
}
